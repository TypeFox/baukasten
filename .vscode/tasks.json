{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: build:vscode-example",
      "type": "npm",
      "script": "build",
      "path": "packages/examples/vscode",
      "problemMatcher": [],
      "detail": "Build the VSCode extension example"
    },
    {
      "label": "npm: dev:web-example",
      "type": "npm",
      "script": "dev",
      "path": "packages/examples/web-example",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*",
          "endsPattern": "Local:.*http://localhost:3000.*"
        }
      },
      "detail": "Start the web example dev server"
    },
    {
      "label": "npm: storybook",
      "type": "npm",
      "script": "storybook",
      "path": "packages/baukasten",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Storybook.*",
          "endsPattern": ".*http://localhost:6006.*"
        }
      },
      "detail": "Start Storybook"
    },
    {
      "label": "npm: watch:vscode-example",
      "type": "npm",
      "script": "watch",
      "path": "packages/examples/vscode",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "detail": "Watch and rebuild VSCode extension on changes"
    },
    {
      "label": "Build All Packages",
      "type": "npm",
      "script": "build",
      "problemMatcher": [],
      "detail": "Build all packages in the workspace"
    }
  ]
}