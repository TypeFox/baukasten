{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Web Example (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages/examples/web-example",
      "sourceMaps": true,
      "preLaunchTask": "npm: dev:web-example"
    },
    {
      "name": "Attach to Storybook (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}/packages/baukasten",
      "sourceMaps": true,
      "preLaunchTask": "npm: storybook"
    },
    {
      "name": "Launch VSCode Extension Example",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/examples/vscode"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/examples/vscode/dist/**/*.js"
      ],
      "preLaunchTask": "npm: build:vscode-example"
    }
  ],
  "compounds": [
    {
      "name": "Launch All Examples",
      "configurations": [
        "Attach to Web Example (Chrome)",
        "Launch VSCode Extension Example"
      ],
      "stopAll": true
    }
  ]
}